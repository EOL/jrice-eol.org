%h1= t("resources.headers.import_log", resource: link_to(@resource.name, @resource)).html_safe
%ul.uk-list
  %li
    %b= "Started:"
    = l(@log.created_at.in_time_zone, format: :long)
  %li
    %b= "Completed:"
    - if @log.completed_at
      = l(@log.completed_at.in_time_zone, format: '%H:%M:%S')
    - else
      No.
  %li
    %b= "Failed:"
    - if @log.failed_at
      = l(@log.failed_at.in_time_zone, format: '%H:%M:%S')
    - else
      No.
  %li
    %b= "Status:"
    = @log.status || "[empty]"
%h2= "Events (most recent first):"
- unless params[:warns]
  .ui.button
    = link_to(t("resources.actions.show_warns", count: @log.import_events.warnings.count), resource_import_log_path(@resource, @log, warns: true))
- else
  .ui.button
    = link_to(t("resources.actions.show_all", count: @log.import_events.count), resource_import_log_path(@resource, @log))
= paginate @events
%ul.uk-list
  - if @events.empty?
    %p= t("resources.no_events")
  - else
    - @events.each do |event|
      %li
        %b= l(event.created_at.in_time_zone, format: '%H:%M:%S')
        %span.uk-text-muted= "(#{event.cat || 'updates'})"
        = event.body
= paginate @events
